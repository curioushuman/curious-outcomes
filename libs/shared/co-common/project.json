{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/co-common/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/layers/co-shared/nodejs/node_modules/@curioushuman/co-common",
        "main": "libs/co-common/src/index.ts",
        "tsConfig": "libs/co-common/tsconfig.lib.json",
        "assets": ["libs/co-common/*.md"]
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs co-common {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/co-common/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/co-common"],
      "options": {
        "jestConfig": "libs/co-common/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
